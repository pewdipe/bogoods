<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.DetailPesanan">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail_pesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@+id/toolbar_detail_pesanan"
          android:background="#33f"/>

    <RelativeLayout android:layout_width="wrap_content"
                    android:id="@+id/cartkosong"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Keranjang Anda Kosong"
                  android:textColor="#000"
                  android:id="@+id/cpok"
                  android:layout_centerHorizontal="true"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small"
                  android:layout_height="wrap_content"/>

        <RelativeLayout android:layout_width="wrap_content"
                        android:background="#050"
                        android:paddingBottom="2dp"
                        android:id="@+id/mulaibelanja"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/cpok"
                        android:paddingEnd="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="MULAI BELANJA"
                      android:padding="10dp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"
                      android:background="#3f3"
                      android:textColor="@android:color/white"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_cart"
            android:layout_below="@+id/toolbar_detail_pesanan"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_above="@+id/add_to_order_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_blue_rounded"
                    android:id="@+id/add_to_order_dp"
                    android:padding="10dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Order All Now"
                  android:id="@+id/order_now"
                  android:textColor="#fff"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="15dp"
                  android:layout_toEndOf="@+id/order_now"
                  android:id="@+id/qty"
                  android:textColor="#fff"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_toStartOf="@+id/opopo"
                  android:layout_marginStart="15dp"
                  android:layout_toEndOf="@+id/qty"
                  android:id="@+id/subtotaldp"
                  android:textColor="#fff"/>

        <ImageView android:layout_width="20dp"
                   android:id="@+id/opopo"
                   android:layout_height="20dp"
                   android:layout_alignParentEnd="true"
                   android:src="@drawable/ic_check_white"/>

    </RelativeLayout>

</RelativeLayout>