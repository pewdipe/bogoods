<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_dashboard"
        tools:context=".page.Dashboard">

    <RelativeLayout
            android:paddingHorizontal="10dp"
            android:background="#33f"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/content_card_name"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcomename"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />

        <TextView
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcomejob"
                android:textAllCaps="true"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/welcomename"
                android:layout_alignParentStart="true"
                />

        <ImageView
                android:id="@+id/goto_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
            android:src="@drawable/ic_person_pin_white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
        <LinearLayout
                android:layout_below="@+id/content_card_name"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:background="#aaa"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/add_order_dashboard"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_add_shopping_cart_blue"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Order"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/accept_order_dashboard"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_shopping_basket_blue"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accept Order"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/add_connection_store_dashboard"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_playlist_add_blue"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Connection"
                            />
                </LinearLayout>
                <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/accept_req_connection_store_dashboard"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_playlist_add_check_blue"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <TextView
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Req Connection"
                            />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>