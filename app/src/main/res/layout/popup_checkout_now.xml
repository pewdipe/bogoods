<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingTop="20dp"
              android:paddingBottom="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="5"
                  android:text="Nama Barang"
                  android:textColor="#000"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="Qty"
                  android:textAlignment="center"
                  android:textColor="#333"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="4"
                  android:text="Total"
                  android:textAlignment="textEnd"
                  android:textColor="#000"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="5"
                  android:id="@+id/nama_barang_popup"
                  android:textColor="#000"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/stok_popup"
                  android:textColor="#333"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="4"
                  android:textAlignment="textEnd"
                  android:id="@+id/total_popup"
                  android:textColor="#000"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                    android:layout_margin="20dp"
                  android:orientation="vertical"
                    android:background="@drawable/button_blue_rounded"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Set Alamat Pengiriman"
                  android:textSize="12sp"
                  android:layout_marginStart="10dp"
                  android:textColor="#fff"
                  android:layout_marginBottom="3dp"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="match_parent"
                  android:hint="Alamat"
                  android:padding="4dp"
                  android:textSize="12sp"
                  android:textColor="#000"
                  android:layout_margin="5dp"
                  android:id="@+id/alamat_pengiriman"
                  android:inputType="textMultiLine"
                  android:background="@drawable/shape_et_auth"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="ORDER Now"
            android:id="@+id/order_now_popup"
            android:textColor="#fff"
            android:background="@drawable/button_green_rounded_5dp"
            android:layout_height="wrap_content"/>

</LinearLayout>