<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.seller.EditProfileReseller">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbarEditSeller"
            android:background="#33f"
            app:title="Edit Profile"
            android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:id="@+id/foto_profile_seller_edit"
            android:src="@drawable/ic_seller"
            android:background="@drawable/background_back"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbarEditSeller"
            android:layout_height="150dp"/>

    <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/content_edit_name"
            android:layout_below="@+id/foto_profile_seller_edit"
            android:background="@drawable/gradient_rounded"
            android:layout_height="wrap_content">
        <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:background="@drawable/shape_et_auth"
                android:id="@+id/et_name_seller_edit"
                android:paddingHorizontal="10dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColorHint="#666"
                android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/content_edit_phone"
            android:layout_below="@+id/content_edit_name"
            android:background="@drawable/gradient_rounded"
            android:layout_height="wrap_content">
        <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:background="@drawable/shape_et_auth"
                android:id="@+id/et_phone_seller_edit"
                android:paddingHorizontal="10dp"
                android:hint="Phone"
                android:inputType="phone"
                android:textColorHint="#666"
                android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/content_edit_gender"
            android:layout_below="@+id/content_edit_phone"
            android:background="@drawable/gradient_rounded"
            android:layout_height="wrap_content">
        <Spinner
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:background="@drawable/shape_et_auth"
                android:id="@+id/sp_gender_seller_edit"
                android:paddingHorizontal="10dp"
                android:entries="@array/gender"
                android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/content_edit_gender"
            android:background="#050"
            android:layout_height="wrap_content">
        <Button
                android:text="SAVE"
                android:id="@+id/bt_save_profile_seller"
                android:textColor="#fff"
                android:paddingHorizontal="50dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="#0c0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>