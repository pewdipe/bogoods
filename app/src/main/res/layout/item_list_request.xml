<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#eee"
                android:id="@+id/ll_req"
                android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_list_request"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_seller"/>

    <TextView android:id="@+id/name_request"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginStart="15dp"
              android:layout_toEndOf="@+id/profile_list_request"
              android:text="Gupilala"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              android:textColor="@android:color/black"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:id="@+id/accept_request"
                  android:layout_toStartOf="@+id/reject_request"
                  android:background="#050"
                  android:paddingEnd="2dp"
                  android:layout_marginEnd="10dp"
                  android:paddingBottom="2dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Accept"
                  android:padding="5dp"
                  android:background="#3f3"
                  android:textColor="@android:color/white"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:id="@+id/reject_request"
                  android:layout_alignParentEnd="true"
                  android:background="#500"
                  android:paddingEnd="2dp"
                  android:paddingBottom="2dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Reject"
                  android:padding="5dp"
                  android:background="#f33"
                  android:textColor="@android:color/white"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:visibility="gone"
                  android:id="@+id/delete_from_reseller"
                  android:layout_alignParentEnd="true"
                  android:background="#500"
                  android:paddingEnd="2dp"
                  android:paddingBottom="2dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Delete"
                  android:padding="5dp"
                  android:background="#f33"
                  android:textColor="@android:color/white"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>