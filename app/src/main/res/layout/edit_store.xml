<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.EditStore">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_edit_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@+id/toolbar_edit_store"
          android:background="#33f"/>

    <LinearLayout
            android:id="@+id/content_storename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_edit_store"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_gradient_round"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Nama Store"
                android:textColor="@android:color/white"/>

        <EditText
                android:id="@+id/et_nama_store_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:textSize="12sp"
                android:background="@drawable/shape_et_auth"
                android:hint="Nama Store"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#666"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/content_storeaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_storename"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_gradient_round"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Alamat Store"
                android:textColor="@android:color/white"/>

        <EditText
                android:id="@+id/et_address_store_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_et_auth"
                android:hint="Alamat Store"
                android:inputType="text"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#666"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/content_image_store"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/content_storeaddress"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/round">

        <ImageView android:id="@+id/image_store_edit"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_margin="5dp"
                   android:src="@drawable/ic_store_black"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/bt_set_image_store"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/content_image_store"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/stroke_item_list">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:text="Set Image Store"
                  android:textColor="@android:color/black"/>

    </LinearLayout>
    <Button android:id="@+id/bt_save_edit_store"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_green_rounded_5dp"
            android:text="Save"
            android:textColor="@android:color/white"/>
</RelativeLayout>