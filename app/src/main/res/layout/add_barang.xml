<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

    <LinearLayout
            android:id="@+id/content_storename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/blue_gradient_round"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Nama Barang"
                android:textColor="@android:color/white"/>

        <EditText
                android:id="@+id/et_nama_barang"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_et_auth"
                android:hint="Nama Barang"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#666"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/content_yutub"
                  android:layout_below="@+id/content_storename"
                  android:layout_margin="10dp">

        <RelativeLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

            <ImageView android:layout_width="100dp"
                       android:layout_centerInParent="true"
                       android:padding="20dp"
                       android:id="@+id/image_barang"
                       android:background="@drawable/round"
                       android:src="@drawable/bogoods_with_gradient"
                       android:layout_height="100dp"/>

        </RelativeLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/content_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_storename"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_gradient_round"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="HARGA ( RUPIAH )"
                        android:textColor="@android:color/white"/>

                <EditText
                        android:id="@+id/et_harga"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_et_auth"
                        android:hint="Harga"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColorHint="#666"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/content_slot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_address"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_gradient_round"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="SLOT"
                        android:textColor="@android:color/white"/>
                <EditText
                        android:id="@+id/et_stok"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_et_auth"
                        android:hint="Slot"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColorHint="#666"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/content_desc"
            android:layout_below="@+id/content_yutub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/blue_gradient_round"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Desc"
                android:textColor="@android:color/white"/>

        <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/shape_et_auth"
                android:hint="Deskripsi"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#666"/>
    </LinearLayout>
</RelativeLayout>