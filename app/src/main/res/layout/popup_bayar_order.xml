<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="125dp"
               android:padding="10dp"
               android:id="@+id/image_bukti_tf_order"
               android:background="@drawable/round"
               android:src="@drawable/ic_menu_gallery"
               android:layout_centerHorizontal="true"
               android:layout_height="125dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="Upload Bukti"
              android:textColor="#fff"
              android:layout_marginTop="10dp"
              android:background="#555"
              android:padding="5dp"
              android:id="@+id/bt_upload_bukti"
              android:layout_below="@+id/image_bukti_tf_order"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:layout_below="@+id/bt_upload_bukti"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:text="Bayar"
            android:id="@+id/bt_bayar"
            android:background="@drawable/button_green_rounded_5dp"
            android:layout_height="wrap_content"/>

</RelativeLayout>