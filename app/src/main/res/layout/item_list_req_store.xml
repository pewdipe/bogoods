<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_req_store"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="@drawable/round"
              android:orientation="horizontal"
              android:padding="10dp">

    <ImageView android:id="@+id/image_req_store"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_margin="5dp"
               android:background="@drawable/round"
               android:src="@drawable/ic_seller"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

        <TextView android:id="@+id/tv_nama_store_req"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:text="Pemilik"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:id="@+id/tv_pemilik_store_req"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:text=""
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"
                      android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:text="Address"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:id="@+id/tv_address_req"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:text=""
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"
                      android:textColor="@android:color/black"/>
        </LinearLayout>
        <TextView
                android:id="@+id/req_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#3f3"
                android:padding="5dp"
                android:textColor="#fff"
                android:text="Request Connection"
                android:textAlignment="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#f33"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:id="@+id/sudah_req"
                    android:text="Already Request"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"/>
    </LinearLayout>


</LinearLayout>