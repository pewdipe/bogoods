<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.ChooseAs">

    <ImageView android:layout_width="150dp"
               android:layout_marginTop="20dp"
               android:src="@drawable/bogoods_text"
               android:layout_centerHorizontal="true"
               android:layout_height="75dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_marginBottom="20dp"
              android:textColor="#000"
              android:textSize="20sp"
              android:text="Which One Are You ?"
              android:layout_centerHorizontal="true"
              android:layout_above="@+id/contentChooseAs"
              android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/contentChooseAs"
            android:layout_width="match_parent"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="0dp"
                   android:padding="10dp"
                   android:id="@+id/im_reseller"
                   android:src="@drawable/ic_reseller"
                   android:layout_height="150dp"
                   android:layout_marginHorizontal="20dp"
                   android:background="@drawable/bg_ic_choose_as"
                   android:layout_weight="1"/>

        <ImageView android:layout_width="0dp"
                   android:id="@+id/im_seller"
                   android:padding="10dp"
                   android:layout_marginHorizontal="20dp"
                   android:src="@drawable/ic_seller"
                   android:layout_height="150dp"
                   android:background="@drawable/bg_ic_choose_as"
                   android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>