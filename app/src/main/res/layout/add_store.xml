<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="20dp">

    <LinearLayout
            android:id="@+id/content_storename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/blue_gradient_round">
        <EditText
                android:id="@+id/et_storename"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:textSize="12sp"
                android:background="@drawable/shape_et_auth"
                android:hint="Nama Toko"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:textColorHint="#666"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/content_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_storename"
            android:layout_margin="10dp"
            android:background="@drawable/blue_gradient_round">
        <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:textSize="12sp"
                android:background="@drawable/shape_et_auth"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:textColorHint="#666"/>
    </LinearLayout>
    <ProgressBar
            android:progressBackgroundTint="@android:color/black"
            android:id="@+id/progressAddStore"
            android:visibility="gone"
            android:layout_below="@+id/content_address"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>